<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title><%= current_page.data.title || "Wikimedia Foundation: Transparency Report" %></title>

		<%= stylesheet_link_tag "bootstrap.min.css" %>
		<%= stylesheet_link_tag "master.css" %>
		<%= stylesheet_link_tag "graph.css" %>
		<%= javascript_include_tag  "all" %>
	</head>

	<body class="<%= page_classes %>">
		<div class="container">
			<header>
				<nav class="navbar navbar-default" role="navigation">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
						<a class="navbar-brand" href="/">
							<img src="/images/logo.png" />
							<% if request.path != 'index.html'  %>
								Wikimedia Foundation Transparency Report
							<% end %>
						</a>
					</div>
					<div id="navbar-collapse" class="collapse navbar-collapse">
						<ul class="nav navbar-nav navbar-right">
							<li><%= navigation_link( 'User Data', 'privacy' ) %></li>
							<li><%= navigation_link( 'Content', '/content' ) %></li>
							<li><%= navigation_link( 'FAQ', '/faq' ) %></li>
						</ul>
					</div>
				</nav>
			</header>

			<%= yield %>

			<footer>
				<div class="col-md-5">
					<a href="/">
						<img src="/images/logo.png">
						Wikimedia Foundation Transparency Report
					</a>
				</div>

				<div class="col-md-2">
					<ul>
						<li><a href="#">User Data</a></li>
						<li><a href="#">Content</a></li>
						<li><a href="#">FAQ</a></li>
					</ul>
				</div>

				<div class="col-md-2">
					<ul>
						<li><a href="http://wikimediafoundation.org/wiki/Privacy_policy">Privacy Policy</a></li>
						<li><a href="https://meta.wikimedia.org/wiki/Data_retention_guidelines">Data Retention Guidelines</a></li>
						<li><a href="http://wikimediafoundation.org/wiki/Terms_of_Use">Terms of Use</a></li>
					</ul>
				</div>

				<div class="col-md-2">
					<ul>
						<li><a href="#">About Us</a></li>
						<li><a href="#">Blog</a></li>
					</ul>
				</div>

			</footer>

		</div>
		<script type="text/javascript" src="/javascripts/retina.min.js"></script>
	</body>
</html>
